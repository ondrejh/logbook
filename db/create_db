/*
 * This (called like "mysql -u <username> -p < create_db") should create database
 * and tables for logbook programme.
 *
 * database name "logbook"
 * 
 * tables:
 *
 * 	"machine" .. description of vehicles
 * 		id - integer, autoincrement, primary key
 *		name - varchar(64), car name (short description)
 *		plate - varchar(16), reg.plate number
 *		note - text, some aditional notes
 *
 *	"fuel" .. log of refueling
 *		car_id - corresponding to machine table
 *		fuel - float, how much of fuel
 *		odo - float, odometer status
 *              datet - datetime, when was refueled
 *		place - varchar(64), where was refueled
 *              price - float, how much it costed
 *              note - text, some aditional notes
 */

create database if not exists logbook;
use logbook;
create table if not exists machine (id INTEGER AUTO_INCREMENT, name VARCHAR(64), plate VARCHAR(16), active BOOL, note TEXT, PRIMARY KEY (id));
create table if not exists fuel (car_id INTEGER, fuel FLOAT, odo FLOAT, datet DATETIME, place VARCHAR(64), price FLOAT, note TEXT)
